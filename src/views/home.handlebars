<div class='titleContainer'>
  <h1>API Rest || E-commerce</h1>
</div>

<div class='infoRow'>

  <div class='userInfoContainer' data-user-id={{user.id}}>
    <div class='nameContainer'>
      <p class='userWelcome'>
        {{user.first_name}}
        {{user.last_name}}
      </p>
    </div>
    <div class='liContainer'>
      <ul>
        <li>E-mail: {{user.email}}</li>
        <li>Rol: "{{user.role}}"</li>
        <li>Id de usuario: "{{user.id}}"</li>
        <li>Id de carrito: "{{user.cart}}"</li>
      </ul>
    </div>
  </div>

  <div class='buttonsContainer'>

    {{! ACCIONES PUBLICAS }}
    <button class='linkBtn'><a class='toolsLink' href='/products'>Ver productos</a></button>
    <button class='linkBtn'><a class='toolsLink' href='/cart'>Ver carrito</a></button>

    {{! SOLO ADMIN O PREMIUM PUEDEN AGREGAR PRODUCTOS Y CAMBIAR ROL }}
    {{#equal user.role 'admin'}}
      <button class='linkBtn'><a class='toolsLink' href='/add-product'>Agregar
          producto</a></button>
      <button id='switchRole_btn' class='linkBtn roleBtn' type='button'>Cambiar
        rol</button>
    {{else}}
      {{#equal user.role 'premium'}}
        <button class='linkBtn'><a class='toolsLink' href='/add-product'>Agregar
            producto</a></button>
        <button
          id='switchRole_btn'
          class='linkBtn roleBtn'
          type='button'
        >Cambiar rol</button>
      {{/equal}}
    {{/equal}}

    {{! SOLO ADMIN PUEDE AGREGAR USUARIO, VER USUARIO }}
    {{#equal user.role 'admin'}}
      <button class='linkBtn'><a class='toolsLink' href='/add-user'>Agregar
          usuario</a></button>

      <button class='linkBtn'><a class='toolsLink' href='/users'>Ver usuarios</a></button>
    {{/equal}}

  </div>

</div>

<footer>
  <button id='logoutBtn' type='button' class='logOutBtn'>
    Cerrar sesion
  </button>
</footer>
